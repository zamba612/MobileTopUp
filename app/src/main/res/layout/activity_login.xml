<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ImageView
             android:layout_width="match_parent"
             android:src="@drawable/topupe"
             android:layout_height="wrap_content"/>
      </androidx.cardview.widget.CardView>
   </RelativeLayout>
   <TextView
       android:layout_width="wrap_content"
       android:text="Serial credit up"
       android:layout_marginStart="2dp"
       android:textAllCaps="true"

       android:textStyle="bold"
       android:textSize="17sp"
       android:textColor="@android:color/white"
       android:layout_height="wrap_content"/>
   <TextView
       android:layout_width="wrap_content"
       android:text="Service login with phonumber verification.Change to your country, and your phonenumber"
       android:layout_marginStart="8dp"
       android:textStyle="bold"
       android:layout_marginTop="14dp"
       android:textSize="14sp"
       android:textColor="@android:color/white"
       android:layout_height="wrap_content"/>
   <Spinner android:layout_width="match_parent"
       android:layout_marginTop="9dp"
       android:id="@+id/countriecodelogin"
       android:theme="@style/AppTheme"
       android:layout_height="wrap_content"/>
   <LinearLayout android:layout_width="match_parent"
       android:orientation="horizontal"
       android:padding="10dp"
       android:layout_height="wrap_content">
      <TextView android:layout_width="wrap_content"
          android:text="+243"
          android:background="@drawable/code"
          android:textSize="24sp"
          android:layout_marginTop="5dp"
          android:id="@+id/countriephonecodelogin"
          android:layout_height="wrap_content"/>
      <EditText android:layout_width="match_parent"
          android:layout_marginTop="5dp"
          android:inputType="number"
          android:padding="10dp"
          android:id="@+id/phone_numberlogin"
          android:textSize="24sp"
          android:text="616724511"
          android:layout_marginRight="44dp"
          android:maxLength="9"
          android:layout_height="wrap_content"/>
   </LinearLayout>
   <Button
       android:id="@+id/requestauthcode"
       android:layout_width="match_parent"
       android:text="Request Auth code"
       android:layout_height="wrap_content"/>
   <EditText
       android:id="@+id/idEdtOtp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Enter verification code"
       android:importantForAutofill="no"
       android:visibility="invisible"
       android:inputType="phone" />
   <Button
       android:id="@+id/idBtnVerify"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/idEdtOtp"
       android:layout_margin="10dp"
       android:visibility="invisible"
       android:text="login" />
   <include layout="@layout/activity_contactez_nous"/>
</LinearLayout>