<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleActivity">
    <ImageView
        android:id="@+id/logiimageview"
        android:src="@drawable/topupe"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/titlepreferences"
        android:textAllCaps="false"
        android:text="Préférenciels"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:padding="14dp"
        android:layout_below="@id/logiimageview"
        android:layout_alignParentEnd="false"
        android:layout_height="wrap_content"/>
<ListView
    android:layout_below="@id/titlepreferences"
    android:id="@+id/singleoperator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</RelativeLayout>