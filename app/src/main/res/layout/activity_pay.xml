<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="7dp"
    android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context=".PayActivity">
    <TextView android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/titlemessage"
        android:text="Send"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       app:cardUseCompatPadding="true"
       app:cardCornerRadius="5dp"
       app:cardPreventCornerOverlap="true"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="14dp"
               android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="Achat"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
               <TextView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:id="@+id/tariftopaydirect"
                   android:text="1usd"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:textAlignment="textEnd"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginTop="14dp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="Commission"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
               <TextView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:id="@+id/commissionamount"
                   android:text="1usd"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:textAlignment="textEnd"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="14dp"
               android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="Discount"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
               <TextView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:id="@+id/discountamount"
                   android:text="1usd"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:textAlignment="textEnd"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="14dp"
             android:layout_height="wrap_content">
             <TextView android:layout_width="wrap_content"
                 android:id="@+id/middlemessage"
                 android:text="To "
                 android:layout_marginTop="5dp"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 android:layout_height="wrap_content"/>
             <TextView android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:textAlignment="textEnd"
                 android:id="@+id/phonenumber_to_send"
                 android:text="+243656233652"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="14dp"
               android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content"
                   android:text="Frais"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
               <TextView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:textAlignment="textEnd"
                   android:id="@+id/fraisdeservice"
                   android:text="00"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="14dp"
               android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content"
                   android:text="Totol to pay"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
               <TextView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:textAlignment="textEnd"
                   android:id="@+id/TotalTopay"
                   android:text="00"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardNumber"
            android:inputType="number"
            android:maxLength="16"
            android:ems="16"
            android:layout_marginRight="74dp"
            android:layout_marginLeft="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Card number"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"

            android:maxLength="2"
            android:layout_marginLeft="44dp"
            android:id="@+id/month"
            android:layout_below="@+id/cardNumber"
            android:layout_alignParentLeft="true"
            android:hint="MM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="/"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/month"
            android:layout_toRightOf="@+id/month"
            />
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:maxLength="2"
            android:id="@+id/year"
            android:hint="YY"
            android:layout_below="@+id/cardNumber"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cvc"
            android:hint="cvc"
            android:maxLength="3"
            android:layout_below="@+id/cardNumber"
            android:layout_toRightOf="@+id/year"
            android:layout_toEndOf="@+id/year"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:text="Pay"
            android:id="@+id/submitButton"
            android:layout_below="@+id/cvc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="false"
            />
        <Button android:layout_width="match_parent"
            android:layout_below="@id/submitButton"
            android:layout_marginRight="44dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="44dp"
            android:text="Abandonner"
            android:id="@+id/payementcancelbutton"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>
